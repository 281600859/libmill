
#include <stdio.h>
#include <assert.h>

coroutine quux (int bar)
{
    coroutine wait w;
    event e;
    endvars;

    call wait (&w, 1000);
    printf ("Waiting for timeout to expire...\n");
    getevent e;
    assert (e == &w);
    printf ("Done!\n");
}

int main ()
{
    quux (1);
    return 0;
}




